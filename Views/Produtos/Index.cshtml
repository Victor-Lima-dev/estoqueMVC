@model estoqueMVC.Models.ProdutosViewModel

<div class="container-fluid">
    <div class="row">
        @foreach (var produto in Model.Produtos)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@produto.Nome</h5>
                        <p class="card-text">@produto.Descricao</p>
                        <p class="card-text"><strong>Pre√ßo:</strong> R$@produto.Preco</p>
                        <form class="d-inline" asp-action="Editar" asp-route-id="@produto.ProdutoId" method="get">
                            <button type="submit" class="btn btn-primary btn-sm">Editar</button>
                        </form>
                        <form class="d-inline" asp-action="Excluir" asp-route-id="@produto.ProdutoId" method="post">
                            <button type="submit" class="btn btn-danger btn-sm ml-1">Excluir</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

