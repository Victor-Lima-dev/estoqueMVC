@model IEnumerable<estoqueMVC.Models.Produto>
<h2>Adicionar Item de Estoque</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Adicionar">
            <div class="form-group">
                <label for="produto">Produto</label>
                <select name="produtoId" class="form-control" id="produto">
                    @foreach (var produto in Model)
                    {
                        <option value="@produto.ProdutoId">@produto.Nome</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="quantidade">Quantidade</label>
                <input type="number" class="form-control" id="quantidade" name="quantidade" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Adicionar</button>
            </div>
        </form>
    </div>
