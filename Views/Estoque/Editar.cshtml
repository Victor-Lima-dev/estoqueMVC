@model estoqueMVC.Models.ItemEstoque

<h2>Editar Item de Estoque</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="ProdutoId">Produto</label>
    </div>
    <div class="form-group">
        <label asp-for="Quantidade">Quantidade</label>
        <input asp-for="Quantidade" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Validade">Data de validade</label>
        <input asp-for="Validade" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
</form>
